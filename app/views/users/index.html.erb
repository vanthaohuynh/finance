<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <div id="<%= dom_id user %>">
      <p>
        <strong>Email:</strong>
        <%= user.email %>
      </p>

      <p>
        <strong>Role ID:</strong>
        <%= user.role_id %>
      </p>

    </div>

    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
